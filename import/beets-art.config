plugins: fetchart

# Put/recognize sidecar art as "cover.jpg" in each album directory
art_filename: cover

fetchart:
  # Prefer local files first; then try a wide set of web sources
  sources: filesystem coverart itunes amazon albumart wikipedia lastfm fanarttv google
  cover_names: cover front folder album art
  cautious: no                  # only filenames matching cover_names count as “trusted”
  minwidth: 500                 # skip tiny images
  store_source: yes             # keep where it came from in flexattr `art_source`
  high_resolution: no           # set yes if you want very large images

